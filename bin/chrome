#!/usr/bin/env bash

# Path to Chrome executable (default install location on Windows)
CHROME_EXE="/mnt/c/Program Files/Google/Chrome/Application/chrome.exe"

# Default: no incognito
INCOGNITO_FLAG=""

# Check for -i or --incognito
for arg in "$@"; do
    if [[ "$arg" == "-i" || "$arg" == "--incognito" ]]; then
        INCOGNITO_FLAG="--incognito"
        # Remove the incognito flag from arguments
        set -- "${@/$arg/}"
        break
    fi
done

# Launch Chrome with or without incognito
"$CHROME_EXE" $INCOGNITO_FLAG "$@" >/dev/null 2>&1 &

disown

